rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }

    // Domain Categories are publicly readable, but only admins can write.
    match /domancategorie/{domancategorieId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // Domains are publicly readable, but only admins can write.
    match /domains/{domainId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}
