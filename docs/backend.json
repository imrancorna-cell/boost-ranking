{
  "entities": {
    "DomainCategory": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "DomainCategory",
      "type": "object",
      "description": "Represents a category of domains.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the domain category (e.g., General Domains, Premium Domains)."
        },
        "slug": {
          "type": "string",
          "description": "URL-friendly slug for the category."
        }
      },
      "required": [
        "name",
        "slug"
      ]
    },
    "Domain": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Domain",
      "type": "object",
      "description": "Represents a domain with its associated metrics.",
      "properties": {
        "categorySlug": {
          "type": "string",
          "description": "The slug of the category this domain belongs to."
        },
        "url": {
          "type": "string",
          "description": "URL of the domain."
        },
        "da": {
          "type": "number",
          "description": "Domain Authority of the domain."
        },
        "tf": {
          "type": "number",
          "description": "Trust Flow of the domain."
        },
        "dr": {
          "type": "number",
          "description": "Domain Rating of the domain."
        },
        "ss": {
          "type": "number",
          "description": "Spam Score of the domain."
        }
      },
      "required": [
        "categorySlug",
        "url"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ],
    "customClaims": {
      "isAdmin": {
        "type": "boolean"
      }
    }
  },
  "firestore": {
    "/domaincategorie/{domainCategoryId}": {
      "schema": {
        "$ref": "#/entities/DomainCategory"
      },
      "description": "Stores domain categories."
    },
    "/domains/{domainId}": {
      "schema": {
        "$ref": "#/entities/Domain"
      },
      "description": "Stores domain information and metrics."
    }
  }
}
